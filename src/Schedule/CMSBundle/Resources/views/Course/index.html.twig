{% extends 'ScheduleCMSBundle:default:index.html.twig' %}
{% block bodyId %}course{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-4"><h1>Paskaitos</h1></div>
        <div class="col-md-4 col-md-offset-4">
            <a class="btn btn-success" href="{{ path('course_new') }}" role="button">Pridėti paskaitą</a>
        </div>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Pavadinimas</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>
                    <a href="{{ path('course_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a> {{ entity.title }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
