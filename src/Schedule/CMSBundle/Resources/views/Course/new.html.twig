{% extends 'ScheduleCMSBundle:default:index.html.twig' %}
{% block bodyId %}course{% endblock %}

{% block body -%}
    <div class="row">
        <h1>Nauja paskaita</h1>
    </div>

    {{ form_start(form, {'attr': {'class':'form-horizontal'}}) }}
    <div class="form-group">{{ form_row(form.title, {'attr': {'class': 'form-control', 'placeholder':'Paskaitos pavadinimas'}}) }}</div>
    <div class="form-group">{{ form_widget(form.submit, {'attr': {'class': 'btn btn-success'}, 'label':'Sukurti'}) }}</div>
    {{ form_end(form) }}

{% endblock %}
