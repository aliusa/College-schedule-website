{% extends '::base.html.twig' %}
{% block bodyId %}schedule{% endblock %}

{% block body -%}
    <h1>Schedule</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Day</th>
                <td>{{ entity.day|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('schedule') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('schedule_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
