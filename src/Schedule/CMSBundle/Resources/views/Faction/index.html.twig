{% extends 'ScheduleCMSBundle:default:index.html.twig' %}
{% block bodyId %}faction{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-4"><h1>Grupės</h1></div>
        <div class="col-md-4 col-md-offset-4">
            <a class="btn btn-success" href="{{ path('faction_new') }}" role="button">Pridėti grupę</a>
        </div>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Grupės pavadinimas</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>
                    <a href="{{ path('faction_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
                    <a href="{{ path('faction_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    {{ entity.name }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
